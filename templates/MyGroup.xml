<templateSet group="MyGroup">
  <template name="pecho" value="&lt;?= $END$ ?&gt;" description="" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="HTML" value="true" />
    </context>
  </template>
  <template name="headJSON" value="header('Content-Type: application/json');" description="Php set up http json header" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="str_trans" value="&lt;?= __('$SELECTION$', 'magis') ?&gt;" description="Wp string translation" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="bu_url" value="&lt;?= bu(&quot;$SELECTION$&quot;) ?&gt;" description="Base Url" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="app" value="Yii::$app" description="" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="PHP" value="true" />
      <option name="PHP Comment" value="false" />
      <option name="PHP String Literal" value="false" />
    </context>
  </template>
  <template name="ftodo" value="/**&#10; * Created $DATE$&#10; * Created by: $USER$&#10; * TODO[front] $END$&#10; */" description="Adds frontend todo" toReformat="false" toShortenFQNames="true">
    <variable name="DATE" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="USER" expression="user()" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="OTHER" value="true" />
    </context>
  </template>
</templateSet>