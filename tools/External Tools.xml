<toolSet name="External Tools">
  <tool name="phpcbf-single file" description="Reformats code to Degordian style" showInMainMenu="true" showInEditor="true" showInProject="true" showInSearchPopup="true" disabled="false" useConsole="true" showConsoleOnStdOut="true" showConsoleOnStdErr="true" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="$USER_HOME$/work/testing-toolkit/vendor/bin/phpcbf" />
      <option name="PARAMETERS" value="--standard=Degordian $FileDir$/$FileName$" />
      <option name="WORKING_DIRECTORY" value="$ProjectFileDir$" />
    </exec>
  </tool>
  <tool name="phpcb-current folder" showInMainMenu="true" showInEditor="true" showInProject="true" showInSearchPopup="true" disabled="false" useConsole="true" showConsoleOnStdOut="true" showConsoleOnStdErr="true" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="$USER_HOME$/work/testing-toolkit/vendor/bin/phpcbf" />
      <option name="PARAMETERS" value="--standard=Degordian --extensions=php -l $FileDir$" />
      <option name="WORKING_DIRECTORY" value="$ProjectFileDir$" />
    </exec>
  </tool>
</toolSet>